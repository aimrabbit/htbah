<section class="grid grid-3col">
    {{#each skillSets as |skillset key|}}
        <div>
            <h3>{{capitalize key}}</h3>
            <div>
                <span>{{skillset.value}}</span>
                <span>{{skillset.eureka.max}}</span>
            </div>
            <ul>
                {{#each skillset.skills as |skill id|}}
                    <li class='item flexrow' data-item-id='{{skill._id}}'>
                        <span class='item-name'>{{skill.name}} | </span>
                        <span>{{skill.baseValue}} | </span>
                        <span>{{skill.value}}</span>
                    </li>
                {{/each}}
            </ul>
            <div>
                <a class='item-control item-create' title='Create item' data-type='skill'>
                    <i class='fas fa-plus'></i>
                    {{localize 'DOCUMENT.New' type='skill'}}
                </a>
            </div>

        </div>
    {{/each}}
</section>
{{stringify system}}